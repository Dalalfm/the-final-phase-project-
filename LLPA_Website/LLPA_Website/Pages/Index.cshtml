@page "/Index"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>








<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100 h-25" src="https://image.shutterstock.com/image-photo/pizza-ham-salami-mushrooms-ingredients-260nw-661996804.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100  h-25" src="https://image.shutterstock.com/image-photo/pizza-ham-salami-mushrooms-ingredients-260nw-661996804.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100  h-25" src="https://image.shutterstock.com/image-photo/pizza-ham-salami-mushrooms-ingredients-260nw-661996804.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>










<div class="text-center">
    <h3 class="display">Welcome To Pizza Order APP</h3>
</div>
<br />
<div class="text-center">
    <h5 class="top-heading">Order Your Favourite Pizzas In One Step</h5>
</div>
<hr />
<br />

<div class="row">
    @foreach (var item in Model.PizzaList)
    {
        <div class="col-4" style="margin-top: 10px">
            <div class="card shadow-lg p-3 mb-5 bg-white rounded" style="width: 18rem; margin-left:30px;">
                <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Photo)" alt="Card image cap" width="286px" height="150px">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Type)</h5>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star"></span>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"></li>
                    <li class="list-group-item">Price: @Html.DisplayFor(modelItem => item.Price)$</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link">Check Out</a>
                    <a class="btn btn-sm btn-success float-right" asp-page="./Order/Index" asp-route-id="@item.Id">Order</a>
                </div>
            </div>

        </div>

    }

</div>

<br />
<style>
    .checked {
        color: orange;
    }
</style>

